{% extends "base.jinja2" %}

{% block title_suffix %}
{{" | Login "}}
{% endblock title_suffix %}

{% block page_content %}
<main class="h-screen flex items-center py-5">
    {# login form wrapper #}
    <div class="p-5 flex-grow max-w-xl mx-auto bg-slate-200 dark:bg-slate-800 rounded">
        <form method="post" class="flex flex-col gap-5">
            {{ adminLoginForm.csrf_token() }}

            <h1 class="font-medium text-2xl text-center text-slate-700 dark:text-slate-300">
                Login
            </h1>

            {% if adminLoginForm.errors %}
            <div class="form-group form-errors-group">
                <ul class="error-list px-2 py-1 flex flex-col gap-1.5 bg-red-300 border border-red-400 text-slate-900 font-medium rounded">
                {% for error_array in adminLoginForm.errors.values()  %}
                    {% for error in error_array  %}
                        <li class="">{{ error }}</li>
                    {% endfor %}
                {% endfor %}
                </ul>
            </div>
            {% endif %}
            

            <div class="form-group username-form-group flex flex-col gap-2">
                {{
                adminLoginForm.name.label(
                class=""
                )
                }}
                {{
                adminLoginForm.name(
                class="block w-full bg-slate-100 dark:bg-slate-700 px-1.5 py-1 border border-slate-300
                dark:border-slate-600 rounded"
                )
                }}
            </div>

            <div class="form-group password-form-group">
                {{
                adminLoginForm.password.label()
                }}
                {{
                adminLoginForm.password(
                class="block w-full bg-slate-100 dark:bg-slate-700 px-1.5 py-1 border border-slate-300
                dark:border-slate-600 rounded"
                )
                }}
            </div>

            <div class="form-group submit-form-group">
                <input type="submit" value="Login"
                    class="block w-full px-2 py-1.5 bg-amber-500 hover:bg-amber-400 focus:bg-amber-600 text-slate-900 font-medium rounded" />
            </div>
        </form>
    </div>
</main>
{% endblock page_content %}